<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <!-- 1. Создание таблиц -->

    <changeSet id="001-create-orders" author="maksim-asonau">
        <createTable tableName="orders">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="002-create-items" author="maksim-asonau">
        <createTable tableName="items">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="NUMERIC(12,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="003-create-order-items" author="maksim-asonau">
        <createTable tableName="order_items">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="item_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="004-fk-order-items-order" author="maksim-asonau">
        <addForeignKeyConstraint
                baseTableName="order_items"
                baseColumnNames="order_id"
                constraintName="fk_order_items_order"
                referencedTableName="orders"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="005-fk-order-items-item" author="maksim-asonau">
        <addForeignKeyConstraint
                baseTableName="order_items"
                baseColumnNames="item_id"
                constraintName="fk_order_items_item"
                referencedTableName="items"
                referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="006-check-quantity-positive" author="maksim-asonau">
        <sql>ALTER TABLE order_items ADD CONSTRAINT chk_order_items_quantity_positive CHECK (quantity > 0);</sql>
    </changeSet>

    <changeSet id="007-index-orders-status" author="maksim-asonau">
        <createIndex tableName="orders" indexName="idx_orders_status">
            <column name="status"/>
        </createIndex>
    </changeSet>

    <changeSet id="3.1-008-index-orders-user-id" author="maksim-asonau">
        <createIndex tableName="orders" indexName="idx_orders_user_id">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="3.1-009-index-order-items-order-id" author="maksim-asonau">
        <createIndex tableName="order_items" indexName="idx_order_items_order_id">
            <column name="order_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>